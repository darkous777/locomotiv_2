<UserControl x:Class="Locomotiv.View.ReserveTicketView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Locomotiv.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Text="Acheter un billet"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>
        <ListBox
            Grid.Row="1"
            ItemsSource="{Binding AvailableTrains}"
            SelectedItem="{Binding SelectedTrain}"
            Height="300">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Id, StringFormat='Train #{0}'}"
                           FontWeight="Bold"/>
                        <TextBlock Text="{Binding PredefinedRoute.Name}" />

                        <TextBlock Text="{Binding PredefinedRoute.StartStation.Name, StringFormat='Départ : {0}'}" />
                        <TextBlock Text="{Binding PredefinedRoute.EndStation.Name, StringFormat='Arrivée : {0}'}" />
                        <TextBlock Text="{Binding PredefinedRoute.DepartureTime, StringFormat='Départ à : {0:HH:mm}'}" />
                        <TextBlock Text="{Binding PredefinedRoute.ArrivalTime, StringFormat='Arrivée à : {0:HH:mm}'}" />
                        <TextBlock>
                            <Run Text="Places disponibles : "/>
                            <Run Text="{Binding AvailableSeats, Mode=OneWay}"/>
                        </TextBlock>

                        <TextBlock Text="Dernières places disponibles"
                           Foreground="Orange"
                           Visibility="{Binding IsAlmostFull,
                            Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <TextBlock Text="COMPLET"
                           Foreground="Red"
                           FontWeight="Bold"
                           Visibility="{Binding IsFull,
                            Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Border Grid.Row="2"
            BorderBrush="#CCC"
            BorderThickness="1"
            Padding="10"
            Margin="0,10,0,0"
            Visibility="{Binding HasSelectedTrain,
                         Converter={StaticResource BoolToVisibilityConverter}}">

            <StackPanel>

                <TextBlock Text="Détails de l’itinéraire"
               FontSize="16"
               FontWeight="Bold"
               Margin="0,0,0,10"/>

                <TextBlock Text="{Binding SelectedTrain.Id,
               StringFormat='Train #{0}'}"
               FontWeight="SemiBold"/>

                <TextBlock Text="{Binding SelectedTrain.PredefinedRoute.Name}" />

                <TextBlock Text="{Binding SelectedTrain.PredefinedRoute.StartStation.Name,
               StringFormat='Départ : {0}'}"/>

                <TextBlock Text="{Binding SelectedTrain.PredefinedRoute.EndStation.Name,
               StringFormat='Arrivée : {0}'}"/>

                <TextBlock Text="{Binding SelectedTrain.PredefinedRoute.DepartureTime,
               StringFormat='Heure de départ : {0:HH:mm}'}"/>

                <TextBlock Text="{Binding SelectedTrain.PredefinedRoute.ArrivalTime,
               StringFormat='Heure d’arrivée : {0:HH:mm}'}"/>

                <TextBlock Text="{Binding SelectedTrain.AvailableSeats,
               StringFormat='Places disponibles : {0}'}"/>

                <TextBlock Text="Dernières places disponibles"
               Foreground="Orange"
               Visibility="{Binding SelectedTrain.IsAlmostFull,
                            Converter={StaticResource BoolToVisibilityConverter}}"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
