<UserControl x:Class="Locomotiv.View.CreateTrainForStationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Locomotiv.View"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Créer un nouveau train"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="1" MaxWidth="500" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       TextWrapping="Wrap"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            <TextBlock Text="Type de train:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding TrainTypes}"
                      SelectedItem="{Binding SelectedTrainType}"
                      Margin="0,0,0,15"
                      Height="30"/>

            <TextBlock Text="Niveau de priorité:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding PriorityLevels}"
                      SelectedItem="{Binding SelectedPriorityLevel}"
                      Margin="0,0,0,15"
                      Height="30"/>

            <TextBlock Text="État du train:"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding TrainStates}"
                      SelectedItem="{Binding SelectedTrainState}"
                      Margin="0,0,0,15"
                      Height="30"/>

            <TextBlock Text="Code de la locomotive (unique):"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding LocomotiveCode, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,15"
                     Height="30"
                     VerticalContentAlignment="Center"
                     Padding="5"/>

            <TextBlock Text="Nombre de wagons (minimum 1):"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding NumberOfWagons, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,20"
                     Height="30"
                     VerticalContentAlignment="Center"
                     Padding="5"/>

            <Button Content="Créer le train"
                    Command="{Binding CreateTrainCommand}"
                    Padding="10"
                    Background="Green"
                    Foreground="White"
                    FontWeight="Bold"
                    HorizontalAlignment="Stretch"
                    Cursor="Hand"/>
        </StackPanel>
        <Button Content="✕"
                Grid.Column="1"
        Command="{Binding CancelCommand}"
        Width="30"
        Height="30"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        FontSize="16"
        FontWeight="Bold"
        Background="#E0E0E0"
        BorderBrush="#BDBDBD"
        Cursor="Hand"
        ToolTip="Annuler"/>
    </Grid>
</UserControl>
