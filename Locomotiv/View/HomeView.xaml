<UserControl x:Class="Locomotiv.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Locomotiv.View"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding WelcomeMessage, Mode=OneWay}"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding IsEmployee, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Détails de votre station"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <Border BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">
                            <Run Text="Station: "/>
                            <Run Text="{Binding StationName, Mode=OneWay}"/>
                        </TextBlock>

                        <TextBlock Foreground="Gray" Margin="0,5">
                            <Run Text="Capacité: "/>
                            <Run Text="{Binding StationCapacity}" FontWeight="Bold"/>
                        </TextBlock>

                        <TextBlock Foreground="Gray" Margin="0,5">
                            <Run Text="Trains assignés: "/>
                            <Run Text="{Binding TrainsAssignedCount}" FontWeight="Bold"/>
                        </TextBlock>

                        <TextBlock Foreground="Gray" Margin="0,5">
                            <Run Text="Trains en station: "/>
                            <Run Text="{Binding TrainsInStationCount}" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <TextBlock Text="Trains assignés à la station"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <ListBox ItemsSource="{Binding TrainsAssigned}"
                         Margin="0,0,0,20"
                         BorderBrush="#E0E0E0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding TypeOfTrain, StringFormat='Type: {0}'}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding State, StringFormat='État: {0}'}"/>
                                <TextBlock Text="{Binding PriotityLevel, StringFormat='Priorité: {0}'}"/>
                                <TextBlock>
                                    <Run Text="Locomotives: "/>
                                    <Run Text="{Binding Locomotives.Count, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Wagons: "/>
                                    <Run Text="{Binding Wagons.Count, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Text="Trains actuellement en station"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <ListBox ItemsSource="{Binding TrainsInStation}"
                         BorderBrush="#E0E0E0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding TypeOfTrain, StringFormat='Type: {0}'}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding State, StringFormat='État: {0}'}"/>
                                <TextBlock Text="{Binding PriotityLevel, StringFormat='Priorité: {0}'}"/>
                                <TextBlock>
                                    <Run Text="Locomotives: "/>
                                    <Run Text="{Binding Locomotives.Count, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Wagons: "/>
                                    <Run Text="{Binding Wagons.Count, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Tableau de bord administrateur"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="15"
                            Margin="0,0,5,5">
                        <StackPanel>
                            <TextBlock Text="Stations" FontSize="14" Foreground="Gray"/>
                            <TextBlock Text="{Binding TotalStations, Mode=OneWay}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="15"
                            Margin="5,0,5,5">
                        <StackPanel>
                            <TextBlock Text="Trains (Total)" FontSize="14" Foreground="Gray"/>
                            <TextBlock Text="{Binding TotalTrains, Mode=OneWay}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="2"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="15"
                            Margin="5,0,0,5">
                        <StackPanel>
                            <TextBlock Text="Trains en station" FontSize="14" Foreground="Gray"/>
                            <TextBlock Text="{Binding TotalTrainsInStations, Mode=OneWay}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="15"
                            Margin="0,5,5,0">
                        <StackPanel>
                            <TextBlock Text="Trains disponibles" FontSize="14" Foreground="Gray"/>
                            <TextBlock Text="{Binding TotalAvailableTrains, Mode=OneWay}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="1"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="15"
                            Margin="5,5,5,0">
                        <StackPanel>
                            <TextBlock Text="Wagons" FontSize="14" Foreground="Gray"/>
                            <TextBlock Text="{Binding TotalWagons, Mode=OneWay}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="2"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Padding="15"
                            Margin="5,5,0,0">
                        <StackPanel>
                            <TextBlock Text="Locomotives" FontSize="14" Foreground="Gray"/>
                            <TextBlock Text="{Binding TotalLocomotives, Mode=OneWay}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Informations système"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock FontSize="14" Margin="0,5" Foreground="Gray">
                            <Run Text="Utilisateur: " FontWeight="SemiBold"/>
                            <Run Text="{Binding ConnectedUser.Prenom}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding ConnectedUser.Nom}"/>
                        </TextBlock>

                        <TextBlock FontSize="14" Margin="0,5" Foreground="Gray">
                            <Run Text="Rôle: " FontWeight="SemiBold"/>
                            <Run Text="Administrateur" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <Border BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="15"
                    Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Planifier un itinéraire"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Station de départ :" FontSize="14" />
                            <ComboBox ItemsSource="{Binding AllStations}"
                              SelectedItem="{Binding SelectedStartStation}"
                              DisplayMemberPath="Name"
                              Height="30"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Station d'arrivée :" FontSize="14" />
                            <ComboBox
                                ItemsSource="{Binding AvailableEndStations}"
                                SelectedItem="{Binding SelectedEndStation}"
                                DisplayMemberPath="Name"
                                Height="30" />
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Train :" FontSize="14" />
                            <ComboBox ItemsSource="{Binding TrainsForSelectedStation}"
                              SelectedItem="{Binding SelectedTrain}" />
                        </StackPanel>

                        <Button Content="Trouver l'itinéraire"
                            Height="35"
                            Margin="0,10,0,0"
                            Command="{Binding FindRouteCommand}"/>

                        <TextBlock Text="{Binding SelectedRouteSummary, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                   Foreground="Green"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
