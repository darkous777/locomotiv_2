<UserControl x:Class="Locomotiv.View.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             xmlns:local="clr-namespace:Locomotiv.View"
             Loaded="UserControl_Loaded">

    <Grid>
        <gmap:GMapControl x:Name="MapControl"
                          Zoom="12"
                          MinZoom="2"
                          MaxZoom="18"
                          />

        <Border Background="White"
                Opacity="0.85"
                Padding="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                CornerRadius="6">
            <StackPanel Width="180">
                <TextBlock Text="Contrôle des Trains" FontWeight="Bold" Margin="0 0 0 10"/>
                <Button Content="▶ Démarrer tous les trains"
                        Command="{Binding StartAllTrainsCommand}"
                        Margin="0 5"
                        Padding="8 4"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button Content="⏹ Arrêter tous les trains"
                        Command="{Binding StopAllTrainsCommand}"
                        Margin="0 5"
                        Padding="8 4"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <Border Background="White"
        Opacity="0.85"
        Padding="10"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="10"
        CornerRadius="6"
        >
            <StackPanel Width="150">
                <TextBlock Text="Légende" FontWeight="Bold" Margin="0 0 0 10"/>

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <Rectangle Width="20" Height="20" Fill="Red" Margin="0 0 10 0"/>
                    <TextBlock Text="Gares" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5" VerticalAlignment="Center">
                    <TextBlock Text="🛤️" FontSize="18" Margin="0 0 10 0" VerticalAlignment="Center"/>
                    <TextBlock Text="Blocks" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <Rectangle Width="20" Height="20" Fill="Green" Margin="0 0 10 0"/>
                    <TextBlock Text="Points d'intérêts" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBlock Text="🚆" FontSize="18" Margin="0 0 10 0" VerticalAlignment="Center"/>
                    <TextBlock Text="Trains en mouvement" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
